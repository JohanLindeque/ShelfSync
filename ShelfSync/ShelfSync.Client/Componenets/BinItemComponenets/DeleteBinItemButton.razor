@rendermode RenderMode.InteractiveAuto
@inject NavigationManager NavigationManager
@inject IBinItemService BinItemService


<button @onclick="DeleteBinItem" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i> Delete</button>


@code {
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public EventCallback OnBinItemDeleted { get; set; }

    async Task DeleteBinItem()
    {
        try
        {
            var success = await BinItemService.DeleteBinItemById(Id);
            if (success)
            {
                await OnBinItemDeleted.InvokeAsync();
            }
            else
            {
                Console.WriteLine("Failed to delete bin Item");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting bin Item: {ex.Message}");
        }
    }
}
