@page "/"
@inject IBinService BinService
@inject ICategoryService CategoryService

<PageTitle>Dashboard</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Welcome to ShelfSync</h1>
    <p class="lead">Quick overview of your workshop storage.</p>

    <div class="row g-4 mt-3">
        <!-- Bins Card -->
        <div class="col-sm-6 col-md-4">
            <div class="card text-white bg-primary h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Storage Bins</h5>
                    <h2 class="fw-bold">@binCount</h2>
                </div>
            </div>
        </div>

        <!-- Categories Card -->
        <div class="col-sm-6 col-md-4">
            <div class="card text-white bg-success h-100 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Categories</h5>
                    <h2 class="fw-bold">@categoryCount</h2>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int binCount = 0;
    private int categoryCount = 0;

    protected override async Task OnInitializedAsync()
    {
        var bins = await BinService.GetAllStorageBins();
        var categories = await CategoryService.GetAllCategories();

        binCount = bins?.Count ?? 0;
        categoryCount = categories?.Count ?? 0;
    }
}
